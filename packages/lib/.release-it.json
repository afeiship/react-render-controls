{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true,
    "increment": "patch"
  },
  "hooks": {
    "after:bump": [
      "yarn run build"
    ],
    "after:release": [
      "yarn pkg get name | cnpm sync"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "‚ú® Features",
            "release": "minor"
          },
          {
            "type": "fix",
            "section": "üêõ Bug Fixes",
            "release": "patch"
          },
          {
            "type": "chore",
            "hidden": true
          },
          {
            "type": "docs",
            "section": "üìù Documentation",
            "release": "patch"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "section": "‚ôªÔ∏è Code Refactoring",
            "release": "patch"
          },
          {
            "type": "perf",
            "section": "‚ö° Performance Improvements",
            "release": "patch"
          },
          {
            "type": "test",
            "hidden": true
          },
          {
            "type": "build",
            "hidden": true
          },
          {
            "type": "ci",
            "hidden": true
          }
        ]
      }
    }
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "proxy": "http://127.0.0.1:9090"
  }
}
