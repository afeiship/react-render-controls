{
  "increment": "patch",
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true,
    "increment": "patch"
  },
  "hooks": {
    "after:bump": [
      "yarn run build"
    ],
    "after:release": [
      "yarn pkg get name | cnpm sync"
    ]
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "proxy": "http://127.0.0.1:9090"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}
